<% content_for :head do %>
  <title>Ranking</title>
  <meta name="description" content="ランキングページです。">
<% end %>

<div class="container col-md-offset-1 col-md-6">
  <% @ranking.each_with_index do |ranking, i| %>
    <h<%= i + 1 %>><%= "#{i + 1}位" %></h<%= i + 1 %>>
    <div class="image">
      <div class="img-wrap">
        <% if ranking.medium_image.present? %>
          <%= image_tag(ranking.medium_image , alt: ranking.title) %>
        <% else %>
          <%= image_tag("no-image.png" , alt: ranking.title) %>
        <% end %>
      </div>
    </div>
    <div class="detail">
      <p class="title">
        <a href="<%= ranking.detail_page_url %>"><%= ranking.title %></a>
      </p>
    </div>
  <% end %>
</div>